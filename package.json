{
    "name": "tasks_client",
    "version": "1.0.0",
    "description": "Tasks Client (REST) developed on node.js, express and axios",
    "main": "dist/server.js",
    "scripts": {
        "clean": "rimraf dist/**/*",
        "copy:views": "cpx \"./src/views/**/*\" \"./dist/views\"",
        "build": "tsc && npm run copy:views",
        "rebuild": "npm run clean && npm run build",
        "start": "nodemon dist/server.js",
        "test": "npm run rebuild && mocha dist/test/*.test.js",
        "test:coverage": "npm run rebuild && nyc mocha dist/test/**/*.test.js"
    },
    "author": "Rafael Ferreira",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tatusis/tasks-client-example-app.git"
    },
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/chai-http": "^4.2.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.6",
        "@types/mocha": "^7.0.2",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.11.1",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "cpx": "^1.5.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "mocha": "^7.1.1",
        "nodemon": "^2.0.3",
        "npm-check-updates": "^4.1.2",
        "nyc": "^15.0.1",
        "prettier": "^2.0.4",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.16",
        "typescript": "^3.8.3"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "bootstrap": "^4.4.1",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "morgan": "^1.10.0",
        "pug": "^2.0.4"
    }
}
